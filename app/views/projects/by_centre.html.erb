<% title "Projects by Research Centre" %>
<p><%= render(:partial => "navigation") %></p>

<% if @centres.blank? %>
  <p>No projects to display.</p>
<%else%>
  <h3 id="top">Research Centres</h3>
  <ul id="centres">
    <% @centres.each do |centre| %>
      <li><a href="#<%= centre.id %>"><%= centre.title %></a></li>
    <% end %>
  </ul>

  <% @centres.each do |centre| %>
    <h3 id="<%= centre.id %>"><%= centre.title %></h2>
    <table>
      <thead><td>Number</td><td>Title</td><td>Supervisor</td></thead>
      <tbody>
        <% supervisors = centre.supervisors %>
        <% supervisors.each do |supervisor| %>
          <% projects = Project.find_all_by_created_by(supervisor.user) %>
            <%= render(:partial => "project_index", :collection => projects) %>
        <% end %>
      </tbody>
    </table>
    <p><a href="#top">Top</a> | <%= link_to 'Back to full project list', {:action => 'index'} %></p>
    <hr />
  <% end %>
<% end %>







