<fieldset><legend>Login information</legend>
	
	<p><label for="id">User id (primary key)</label>: <%=  user.id %>

	<p><label for="login">Login</label><br/>
<%= f.text_field 'login' %></p>

<p><label for="password">Password</label><br/>
<%= f.password_field 'password' %></p>

<p><label for="password_confirmation">Confirm Password</label><br/>
<%= f.password_field 'password_confirmation' %></p>

<p><label for="email">Email address?</label><br />
<%= f.text_field 'email' %></p>

<p><label for="role">Roles?</label> 
<% user.roles.each do |r| %>
  <%= r.name %>
<% end %>
</fieldset>
<fieldset><legend>User details</legend>
<p><label for="title">Title</label>
<%= f.select(:title, %w{ Mr Mrs Ms Dr Prof. } )%>
<label for="first_name">First Name</label>
<%= f.text_field 'first_name', :size=>"20" %>
<label for="initials">Initials</label>
<%= f.text_field 'initials',  :size=>"5" %>
<label for="last_name">Last Name</label>
<%= f.text_field 'last_name', :size=>"20" %></p>
<p><label for="known_as">Known as? </label>
<%= f.text_field 'known_as', :size=>"20" %></p>
</fieldset>
