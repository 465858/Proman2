<% title "All Projects" %>
<p><%= render(:partial => "navigation") %></p>

<table>
  <thead><td>Number</td><td>Title</td><td>Supervisor</td><td>Email</td><td colspan="2">Action</td></thead>
  <tbody>

  <% @projects.each do |project| %>
    <% creator = User.find(project.created_by) %>
    <tr>
      <td>
        <%= project.id -%>
      </td>
      <td>
        <%= link_to project.title, project %>
      </td>
      <td><%= creator.name %>
      </td>
      <td><a href="mailto:<%= creator.email %>">
        <%= creator.email -%></a>
      </td>
      <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <td><%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New project', new_project_path %>