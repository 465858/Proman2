<% title "Manage students" %>

<% active_tab :admin %>

<% content_for :head do %>
  <%= stylesheet_link_tag 'themes/blue/style.css' %>
  <%= stylesheet_link_tag 'jquery.tablesorter.pager.css' %>
  <%= javascript_include_tag "jquery-1.3.2.min.js" %>
  <%= javascript_include_tag "jquery.metadata.js" %>
  <%= javascript_include_tag "jquery.dimensions.js" %>
  <%= javascript_include_tag "jquery.tablesorter.min.js" %>
  <%= javascript_include_tag "jquery.tablesorter.pager.js" %>
  <script type="text/javascript">
    $(document).ready(function() {
      $("table")
      .tablesorter({sortList: [[1, 0]], widthFixed: true, widgets: ['zebra']})
      .tablesorterPager({container: $("#pager"), positionFixed: false});
    });
  </script>
<% end %>
<p>
<%= link_to 'New student', new_admin_student_path %>
</p>
<table class="tablesorter">
  <thead>
    <tr><th>User id</th><th>Name</th><th>Discipline</th><th>Grade</th><th class="{sorter: false}">Show</th><th class="{sorter: false}">Edit</th><th class="{sorter: false}">Delete</th></tr>
  </thead>
  <tfoot><tr><th>User id</th><th>Name</th><th>Discipline</th><th>Grade</th><th>Show</th><th>Edit</th><th>Delete</th></tr></tfoot>
  <tbody>
    <%= render(:partial => "student_index", :collection => @students) %>
  </tbody>
</table>
<div id="pager" class="pager">
  <form>
    <img src="/icons/first.png" class="first"/>
    <img src="/icons/prev.png" class="prev"/>
    <input type="text" class="pagedisplay"/>
    <img src="/icons/next.png" class="next"/>
    <img src="/icons/last.png" class="last"/>
    <select class="pagesize">
      <option selected="selected"  value="10">10</option>
      <option value="20">20</option>
      <option value="30">30</option>
      <option  value="40">40</option>
    </select>
  </form>
</div>
