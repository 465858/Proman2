<% title "Bulk upload student data" %>

<% form_for :import_students,
            :url=>{:controller=>"admin/bulk_uploader",
            :action=>"csv_import_students"},
            :html => { :multipart => true } do |f| -%>
 <table>
   <tr>
     <td>
      <label for="students_file">
        Select a CSV File :
      </label>
     </td>
     <td >
       <%= f.file_field :students_file -%>
     </td>
   </tr>
   <tr>
     <td colspan='2'>
       <%= submit_tag 'Submit' -%>
     </td>
   </tr>
 </table>
<% end -%>